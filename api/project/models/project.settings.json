{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "website": {
      "type": "string"
    },
    "galleries": {
      "collection": "gallery",
      "via": "project"
    },
    "technologies": {
      "collection": "technology",
      "via": "project"
    },
    "startDate": {
      "type": "date"
    },
    "finishDate": {
      "type": "date"
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "Website",
        "WebApp",
        "Game",
        "MobileApp",
        "DesktopApp",
        "Project",
        "Prototype"
      ],
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "short_description": {
      "type": "richtext",
      "required": true
    },
    "links": {
      "collection": "link",
      "via": "project"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "Status": {
      "type": "enumeration",
      "enum": [
        "Finished",
        "Cancelled",
        "Prototype"
      ],
      "default": "Prototype"
    },
    "people": {
      "collection": "people",
      "via": "projects",
      "dominant": true
    }
  }
}
