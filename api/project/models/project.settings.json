{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "website": {
      "type": "string"
    },
    "galleries": {
      "collection": "gallery",
      "via": "project"
    },
    "technologies": {
      "collection": "technology",
      "via": "project"
    },
    "startDate": {
      "type": "date"
    },
    "finishDate": {
      "type": "date"
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "Website",
        "WebApp",
        "Game",
        "MobileApp",
        "DesktopApp",
        "Project"
      ],
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
